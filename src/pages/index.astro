---
import Default from '../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'
import FormattedDate from '../components/FormattedDate.astro'

const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).filter((post) => !post.data.isHidden)
---

<Default>
  <section>
    <ul class="flex flex-col gap-4">
      {
        posts.map((post) => (
          <li>
            <a
              href={`/article/${post.slug}/`}
              class="block p-3 rounded-md bg-neutral-900/75 ring-neutral-100/30 hover:bg-neutral-600 transition ease-in duration-100 hover:cursor-pointer"
            >
              <FormattedDate date={post.data.pubDate} format="YYYY-MM-DD" />
              <h2 class="mt-2 text-lg">{post.data.title}</h2>
              <p class="mt-2 text-sm italic text-neutral-400">{post.data.description}</p>
              <ul class="mt-2 flex flex-wrap gap-x-2 text-sm" aria-label="タグ">
                {post.data.tags?.map((tag) => (
                  <li>
                    <span>#{tag}</span>
                  </li>
                ))}
              </ul>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Default>
