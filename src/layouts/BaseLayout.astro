---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import type { WebSite, Article, WithContext } from 'schema-dts'

import Analytics from '@vercel/analytics/astro'

type Props = {
  jsonLdSchema?: WebSite | WithContext<Article>
}

const { jsonLdSchema } = Astro.props
---

<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} jsonLdSchema={jsonLdSchema} />
  </head>

  <body class="container mx-auto px-6 max-w-[800px] font-main">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <Analytics />
  </body>
</html>
