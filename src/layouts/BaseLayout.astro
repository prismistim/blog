---
import SpeedInsights from '@vercel/speed-insights/astro'
import type { Article, WebSite, WithContext } from 'schema-dts'
import BaseHead from '../components/BaseHead.astro'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts'

type Props = {
  jsonLdSchema?: WebSite | WithContext<Article>
}

const { jsonLdSchema } = Astro.props
---

<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} jsonLdSchema={jsonLdSchema} />
    <link rel="preload" as="image" href="https://asset2.asayake.dev/thumb/jihanki.webp">
  </head>

  <body class="container mx-auto px-6 max-w-[800px] font-main">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <SpeedInsights />
  </body>
</html>
